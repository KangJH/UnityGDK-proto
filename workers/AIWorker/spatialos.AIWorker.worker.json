{
    "build": {
        "tasks": [
            {
                "name": "Codegen",
                "steps": [
                    {
                        "name": "C++",
                        "command": "bash",
                        "arguments": [ "./build_schema.sh" ]
                    }
                ]
            },
            {
                "name": "build",
                "steps": [
                    {
                        "name": "C++",
                        "command": "bash",
                        "target": "windows",
                        "arguments": [ "./build.sh", "Windows" ]
                    },
                    {
                        "name": "C++",
                        "command": "bash",
                        "target": "linux",
                        "arguments": [ "./build.sh", "Linux" ]
                    },
                    {
                        "name": "zip",
                        "command": "spatial",
                        "target": "windows",
                        "arguments": [ 
                            "file",
                            "zip",
                            "--basePath=bin",
                            "--output=../../build/assembly/worker/AIWorker",
                            "--worker_platform=windows",
                            "AIWorker.*"
                        ]
                    },
                    {
                        "name": "zip",
                        "command": "spatial",
                        "target": "linux",
                        "arguments": [ 
                            "file",
                            "zip",
                            "--basePath=bin",
                            "--output=../../build/assembly/worker/AIWorker",
                            "--worker_platform=linux",
                            "AIWorker"
                        ]
                    }

                ]
            },
            {
                "name": "clean",
                "steps": [
                    {
                        "name": "Run make clean",
                        "command": "bash",
                        "arguments": [ "./clean.sh" ]
                    }
                ]
            }
        ]
    },
    "bridge": {
        "worker_attribute_set": {
            "attributes": [
                "AIWorker"
            ]
        },
        "entity_interest": {
            "range_entity_interest": {
                "radius": 500
            }
        },
        "component_delivery": {
            "default": "RELIABLE_ORDERED",
            "checkout_all_initially": true
        }
    },
    "managed": {
        "windows": {
            "artifact_name": "AIWorker@Windows.zip",
            "command": "AIWorker.exe",
            "arguments": [
                "${IMPROBABLE_RECEPTIONIST_HOST}",
                "${IMPROBABLE_RECEPTIONIST_PORT}",
                "${IMPROBABLE_WORKER_NAME}",
                "${IMPROBABLE_WORKER_ID}",
                "${IMPROBABLE_LOG_FILE}"
            ]
        },
		"linux": {
            "artifact_name": "AIWorker@Linux.zip",
            "command": "AIWorker",
            "arguments": [
                "${IMPROBABLE_RECEPTIONIST_HOST}",
                "${IMPROBABLE_RECEPTIONIST_PORT}",
                "${IMPROBABLE_WORKER_NAME}",
                "${IMPROBABLE_WORKER_ID}",
                "${IMPROBABLE_LOG_FILE}"
            ]
        }

    }
}