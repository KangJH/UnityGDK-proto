{
    "build": {
        "tasks": [
            {
                "name": "Codegen",
                "steps": [
                    {
                        "name": "C++",
                        "command": "bash",
                        "arguments": [ "./build_schema.sh" ]
                    }
                ]
            },
            {
                "name": "build",
                "steps": [
                    {
                        "name": "C++",
                        "command": "bash",
                        "arguments": [ "./build.sh" ]
                    },
                    {
                        "name": "zip",
                        "command": "spatial",
                        "arguments": [ 
                            "file",
                            "zip",
                            "--basePath=bin",
                            "--output=../../build/assembly/worker/ChatWorker",
                            "--worker_platform=windows",
                            "ChatWorker.*"
                        ]
                    }

                ]
            },
            {
                "name": "clean",
                "steps": [
                    {
                        "name": "Run make clean",
                        "command": "base",
                        "arguments": [ "./clean.sh" ]
                    }
                ]
            }
        ]
    },
    "bridge": {
        "worker_attribute_set": {
            "attributes": [
                "ChatWorker"
            ]
        },
        "entity_interest": {
            "range_entity_interest": {
                "radius": 10
            }
        },
        "component_delivery": {
            "default": "RELIABLE_ORDERED",
            "checkout_all_initially": true
        }
    },
    "managed": {
        "windows": {
            "artifact_name": "ChatWorker@Windows.zip",
            "command": "ChatWorker.exe",
            "arguments": [
                "${IMPROBABLE_RECEPTIONIST_HOST}",
                "${IMPROBABLE_RECEPTIONIST_PORT}",
                "${IMPROBABLE_WORKER_ID}"
            ]
        }

    },
    "external": {
        "default": {
            "run_type": "EXECUTABLE",
            "windows": {
                "command": "bin/ChatWorker.exe"

            }
        }

    }
}